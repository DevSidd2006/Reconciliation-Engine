{
  "name": "banking-reconciliation-launcher",
  "version": "1.0.0",
  "description": "Desktop launcher for Banking Reconciliation System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "banking",
    "reconciliation",
    "launcher",
    "docker",
    "electron"
  ],
  "author": "Banking System Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "build": {
    "appId": "com.banking.reconciliation.launcher",
    "productName": "Banking Reconciliation Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../docker-compose.yml",
        "to": "docker-compose.yml"
      },
      {
        "from": "../backend",
        "to": "backend"
      },
      {
        "from": "../frontend",
        "to": "frontend"
      },
      {
        "from": "../producers",
        "to": "producers"
      },
      {
        "from": "../.env",
        "to": ".env"
      }
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "mac": {
      "identity": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}